<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".CreateNewReportActivity">

    <!-- Nagłówek z przyciskiem powrotu -->
    <include
        android:id="@+id/backHeader"
        layout="@layout/header_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Główna zawartość -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Pole wyboru lekarza -->
            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewDoctor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/white_background"
                android:hint="Select doctor"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="#989595"
                android:textSize="16sp" />

            <!-- Nagłówek symptomów -->
            <TextView
                android:id="@+id/textViewCheckSymptomsCreateNewReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check symptoms"
                android:textColor="#FF9800"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Checkboxy symptomów -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_background"
                android:padding="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/checkBoxItchingCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Itching"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/checkBoxMoleChangesCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mole changes"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/checkBoxRashCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rash"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/checkBoxDrynessCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dryness"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/checkBoxPimplesCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pimples"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/checkBoxSevereAcneCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Severe acne"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/checkBoxBlackheadsCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Blackheads"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/checkBoxWartsCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Warts"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/checkBoxRednessCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Redness"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/checkBoxDiscolorationCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discoloration"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxSeborrhoeaCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Seborrhoea"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/checkBoxNewMoleCreateNewReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="New mole"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Pole wprowadzania dodatkowych informacji -->
            <EditText
                android:id="@+id/enterOtherInfoCreateNewReport"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/white_background"
                android:hint="Enter other info"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="#989595"
                android:textSize="16sp"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <!-- Dodanie zdjęcia -->
            <ImageView
                android:id="@+id/imageAddPhotoCreateNewReport"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/add_a_photo"
                android:background="@drawable/white_background" />

            <!-- Przycisk wysyłania raportu -->
            <Button
                android:id="@+id/buttonUpdateProfilePat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/start_button"
                android:text="Send Report"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
