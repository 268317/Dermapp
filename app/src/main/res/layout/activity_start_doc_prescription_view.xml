<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutStartDocPrescription"
    android:layout_width="250dp"
    android:layout_height="170dp"
    android:background="@drawable/rounded_gray_background">

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/linearLayoutStartDocPrescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grey_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPatientStartDocPrescription"
                    android:layout_width="119dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="Patient name" />

                <TextView
                    android:id="@+id/textViewSurnameStartDocPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="surname"
                    android:textAlignment="textStart" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewDateStartDocPrescription"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Date, time" />

            <Button
                android:id="@+id/buttonSeeDetailsStartDocPrescription"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="See details"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>