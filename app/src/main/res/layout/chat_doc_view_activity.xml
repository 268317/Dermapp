<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="150dp">

    <LinearLayout
        android:id="@+id/linearLayoutDocView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewPatMessagesDoc2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/black_account_circle" />

            <TextView
                android:id="@+id/textViewPatFirstNameMessagesDoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="First Name"
                android:textColor="#504D4D"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewPatLastNameMessagesDoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Last Name"
                android:textColor="#FF504D4D"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/statusIndicatorBackgroundDoc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_background"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutDocView"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutDocView"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutDocView"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutDocView" />

    <View
        android:id="@+id/statusIndicatorDoc"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/status_indicator_background_offline"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutDocView"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutDocView"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutDocView"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutDocView" />

</androidx.constraintlayout.widget.ConstraintLayout>