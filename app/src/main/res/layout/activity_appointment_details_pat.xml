<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        tools:context=".AppointmentDetailsPatActivity">

    <include
            android:id="@+id/backHeader"
            layout="@layout/header_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!--    <ImageView-->
    <!--            android:id="@+id/imageAvatarEditProfileDoc"-->
    <!--            android:layout_width="150dp"-->
    <!--            android:layout_height="150dp"-->
    <!--            android:layout_marginTop="27dp"-->
    <!--            app:layout_constraintTop_toBottomOf="@+id/backHeader"-->
    <!--            app:layout_constraintStart_toStartOf="parent"-->
    <!--            app:layout_constraintEnd_toEndOf="parent"-->
    <!--            app:srcCompat="@drawable/baseline_spa_24" />-->

    <LinearLayout
            android:id="@+id/linearLayoutAppointmentPat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background"
            android:elevation="3dp"
            android:orientation="vertical"
            tools:ignore="TextSizeCheck"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/backHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="168dp"
                app:srcCompat="@drawable/baseline_spa_24"
                android:id="@+id/imageOrangeSpa"
                android:contentDescription="TODO" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewAppointmentDatePat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Appointment date:"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewDateAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DD MONTH YYYY, 00:00"
                    android:textAlignment="center"
                    android:textColor="#2C2C2C"
                    android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewDoctorAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Doctor:"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewFirstNameAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First name:"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/textViewDoctorNameAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="first name"
                    android:textAlignment="viewEnd"
                    android:paddingRight="10dp"
                    android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewLastNameAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Last name:"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/textViewDocLastNameAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="last name"
                    android:textAlignment="viewEnd"
                    android:paddingRight="10dp"
                    android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewDocIDAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Doctor ID:"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/textViewDoctorIDAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="doctor ID"
                    android:textAlignment="viewEnd"
                    android:paddingRight="10dp"
                    android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewAppointmentLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address:"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/textViewAppointmentLocEnter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="localization"
                    android:textAlignment="viewEnd"
                    android:paddingRight="10dp"
                    android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>