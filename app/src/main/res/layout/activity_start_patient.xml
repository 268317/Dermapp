<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".StartPatActivity"
    tools:openDrawer="start">

    <!-- Główny widok -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <include
            android:id="@+id/includeHeader"
            layout="@layout/header_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewUpcomingAppointments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming appointments"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/guideline19"
            app:layout_constraintTop_toTopOf="@+id/guideline21" />

        <TextView
            android:id="@+id/textViewMakeAnAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make an appointment"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/guideline19"
            app:layout_constraintTop_toTopOf="@+id/guideline22" />

        <TextView
            android:id="@+id/textViewAddRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add new medical record"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/guideline19"
            app:layout_constraintTop_toTopOf="@+id/guideline24" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewDoctor"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_gray_background"
            android:completionThreshold="0"
            android:hint="Doctor"
            android:paddingStart="16dp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintStart_toStartOf="@+id/guideline19"
            app:layout_constraintTop_toBottomOf="@+id/textViewMakeAnAppointment" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewLocalization"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_gray_background"
            android:completionThreshold="0"
            android:fontFamily="sans-serif"
            android:hint="Localization"
            android:paddingStart="16dp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintStart_toStartOf="@+id/guideline19"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewDoctor" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextDate"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_gray_background"
            android:clickable="true"
            android:focusable="false"
            android:hint="Date"
            android:inputType="date"
            android:paddingStart="16dp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@+id/autoCompleteTextViewLocalization"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewLocalization" />

        <Button
            android:id="@+id/bookButton"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_orange_background"
            android:clickable="true"
            android:focusable="false"
            android:fontFamily="sans-serif"
            android:hint="Book"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/autoCompleteTextViewLocalization"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewLocalization" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="370dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="75dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="275dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="474dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Szufladka nawigacyjna -->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header_name"
        app:menu="@menu/patient_menu"
        android:layout_gravity="start"
        />


</androidx.drawerlayout.widget.DrawerLayout>