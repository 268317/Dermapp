<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayoutStartPatPrescription"
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:background="@drawable/rounded_gray_background">

    <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:layout_gravity="center">

        <LinearLayout
                android:id="@+id/linearLayoutStartPatPrescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grey_background"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/textViewDoctorStartPatPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Doctor name" />

            <TextView
                    android:id="@+id/textViewSurnameStartPatPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="surname"
                    android:textAlignment="center" />

            <TextView
                    android:id="@+id/textViewDateStartPatPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Date, time"
                    android:textColor="@color/orange_light" />

            <TextView
                    android:id="@+id/textTextStartPatPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center"
                    android:text="Prescription text" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>