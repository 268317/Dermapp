<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayoutStartPatPrescription"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_background">

    <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:layout_gravity="center">

        <LinearLayout
                android:id="@+id/linearLayoutStartPatPrescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grey_background"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/textViewDoctorStartPatPrescription2"
                        android:layout_width="110dp"
                        android:layout_height="31dp"
                        android:gravity="center"
                        android:text="Doctor name"
                        android:layout_weight="1"
                        android:textAlignment="textEnd" />

                <TextView
                        android:text="     "
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2"
                        android:layout_weight="1" />

                <TextView
                        android:id="@+id/textViewSurnameStartPatPrescription2"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="surname"
                        android:textAlignment="textStart" />
            </LinearLayout>

            <TextView
                    android:id="@+id/textViewDateStartPatPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:gravity="center"
                    android:text="Date, time"
                    android:textColor="@color/orange_light" />

            <TextView
                    android:id="@+id/textTextStartPatPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="Prescription text" />

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                        android:text="DELETE"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:id="@+id/buttonDeletePatPres"
                        android:layout_gravity="center"
                        android:background="@drawable/button_background_disabled"
                        android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>