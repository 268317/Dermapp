<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayoutStartPatAppointments"
    android:layout_width="250dp"
    android:layout_height="170dp"
    android:background="@drawable/rounded_gray_background">

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/linearLayoutStartPatAppointments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grey_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDoctorStartPatAppointments"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="Doctor name" />

            <TextView
                android:id="@+id/textViewSurnameStartPatAppointments"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Doctor surname"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textViewDateStartPatAppointments"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Date, time"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="217dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seeDetailsButtonStartAppointmentPat"
                    android:layout_width="116dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/start_button"
                    android:text="See details"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/buttonDeleteAppointmentPat"
                    android:layout_width="73dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_gray_background"
                    android:text="DELETE"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>