<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        tools:context=".AppointmentDetailsPatActivity">

    <include
        android:id="@+id/backHeader"
        layout="@layout/header_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!--    <ImageView-->
    <!--            android:id="@+id/imageAvatarEditProfileDoc"-->
    <!--            android:layout_width="150dp"-->
    <!--            android:layout_height="150dp"-->
    <!--            android:layout_marginTop="27dp"-->
    <!--            app:layout_constraintTop_toBottomOf="@+id/backHeader"-->
    <!--            app:layout_constraintStart_toStartOf="parent"-->
    <!--            app:layout_constraintEnd_toEndOf="parent"-->
    <!--            app:srcCompat="@drawable/baseline_spa_24" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/backHeader">


        <LinearLayout
            android:id="@+id/linearLayoutAppointmentPat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background"
            android:elevation="3dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backHeader"
            tools:ignore="TextSizeCheck">


            <ImageView
                android:id="@+id/imageOrangeSpa"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/baseline_spa_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAppointmentDatePat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Appointment date:"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDateAppointmentDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DD MONTH YYYY, 00:00"
                    android:textAlignment="center"
                    android:textColor="#2C2C2C"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDoctorAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Patient:"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewFirstNameAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First name:"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewPatNameAppointmentDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:text="first name"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewLastNameAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Last name:"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewPatLastNameAppointmentDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:text="last name"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDocIDAppointmentPat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pesel:"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewPatPeselAppointmentDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:text="pesel"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAppointmentLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address:"
                    android:textColor="#2C2C2C"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewAppointmentLocEnter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:text="localization"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/textViewDiagnosisPat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Diagnosis:"
                android:textColor="#FF9800"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editTextMultiLineDiagnosisAppointmentPat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:hint="-"
                android:inputType="textMultiLine"
                android:padding="15dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewRecommendationsPat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Recommendations:"
                android:textColor="#FF9800"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editTextMultiLineRecommendationsAppointmentPat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:hint="-"
                android:inputType="textMultiLine"
                android:layout_marginBottom="40dp"
                android:padding="15dp"
                android:textSize="16sp" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>