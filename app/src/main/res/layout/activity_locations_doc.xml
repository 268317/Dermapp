<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyLight"
    tools:context=".ManageDocLocationsActivity">

    <!-- Header -->
    <include
        android:id="@+id/backHeader"
        layout="@layout/header_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add New Localization Section -->
            <LinearLayout
                android:id="@+id/linearLayoutAddLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background"
                android:elevation="3dp"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNewLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add New Location"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/editTextNewLoc"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="New Address"
                    android:background="@drawable/grey_background"
                    android:paddingStart="16dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/addressFormatHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Format: Street and number, postcode [XX-XXX], City"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:paddingTop="8dp" />

                <Button
                    android:id="@+id/buttonAddLoc"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/start_button"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Your Localizations Section -->
            <LinearLayout
                android:id="@+id/linearLayoutYourLocs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/white_background"
                android:elevation="3dp"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewListLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Locations"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewLocations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
